    <script>
        // إنشاء النجوم المتحركة
        function createStars() {
            const starsContainer = document.getElementById('stars');
            const starsCount = 150;
            
            for (let i = 0; i < starsCount; i++) {
                const star = document.createElement('div');
                star.classList.add('star');
                
                // أحجام عشوائية للنجوم
                const size = Math.random() * 3 + 1;
                star.style.width = `${size}px`;
                star.style.height = `${size}px`;
                
                // مواقع عشوائية
                star.style.left = `${Math.random() * 100}%`;
                star.style.top = `${Math.random() * 100}%`;
                
                // مدة ومعدل وميض عشوائي
                const duration = Math.random() * 5 + 3;
                star.style.setProperty('--duration', `${duration}s`);
                
                starsContainer.appendChild(star);
            }
        }
        
        // تحديث الصفحة عند الضغط على اللوجو
        document.getElementById('refresh-btn').addEventListener('click', function() {
            // إضافة أنيميشن الخروج
            document.body.style.opacity = '0';
            document.body.style.transition = 'opacity 0.5s ease';
            
            setTimeout(() => {
                location.reload();
            }, 500);
        });
        
        // أنيميشن للعناصر عند التمرير
        function animateOnScroll() {
            const elements = document.querySelectorAll('.skill-card, .hero-section, footer');
            
            elements.forEach(element => {
                const elementPosition = element.getBoundingClientRect().top;
                const screenPosition = window.innerHeight / 1.2;
                
                if (elementPosition < screenPosition) {
                    element.style.opacity = '1';
                    element.style.transform = 'translateY(0)';
                }
            });
        }
        
        // تهيئة الأنيميشن عند التحميل
        window.addEventListener('load', function() {
            // إنشاء النجوم
            createStars();
            
            // إخفاء العناصر للأنيميشن
            const elements = document.querySelectorAll('.skill-card, .hero-section, footer');
            elements.forEach(element => {
                element.style.opacity = '0';
                element.style.transform = 'translateY(30px)';
                element.style.transition = 'opacity 0.8s ease, transform 0.8s ease';
            });
            
            // تطبيق الأنيميشن بعد فترة قصيرة
            setTimeout(() => {
                animateOnScroll();
            }, 300);
            
            // إضافة تأثير اللمعان للعنوان البنفسجي
            const purpleTitle = document.querySelector('.title-purple');
            setInterval(() => {
                purpleTitle.style.textShadow = `0 0 ${10 + Math.random() * 10}px rgba(138, 43, 226, ${0.7 + Math.random() * 0.3})`;
            }, 2000);
        });
        
        // تفعيل الأنيميشن عند التمرير
        window.addEventListener('scroll', animateOnScroll);
        
        // تأثيرات إضافية عند التحويم على المربعات
        const skillCards = document.querySelectorAll('.skill-card');
        skillCards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                const icon = this.querySelector('.skill-icon');
                icon.style.transform = 'rotate(360deg)';
                icon.style.transition = 'transform 0.5s ease';
            });
            
            card.addEventListener('mouseleave', function() {
                const icon = this.querySelector('.skill-icon');
                icon.style.transform = 'rotate(0deg)';
            });
        });
    </script>
