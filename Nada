    <script>
        // Discord Integration Setup
        document.addEventListener('DOMContentLoaded', function() {
            const loadingScreen = document.getElementById('loading');
            const discordUserId = '925382849450360852'; // Replace with Nada's actual Discord ID
            
            // Discord status configuration
            const discordStatuses = {
                'online': {
                    text: 'Online',
                    color: '#3ba55c',
                    class: 'status-online',
                    badgeText: 'ðŸŸ¢'
                },
                'idle': {
                    text: 'Idle',
                    color: '#faa81a',
                    class: 'status-idle',
                    badgeText: 'ðŸŸ¡'
                },
                'dnd': {
                    text: 'Do Not Disturb',
                    color: '#ed4245',
                    class: 'status-dnd',
                    badgeText: 'ðŸ”´'
                },
                'invisible': {
                    text: 'Offline',
                    color: '#747f8d',
                    class: 'status-invisible',
                    badgeText: 'âš«'
                },
                'offline': {
                    text: 'Offline',
                    color: '#747f8d',
                    class: 'status-invisible',
                    badgeText: 'âš«'
                }
            };

            // Simulated Discord API response (Replace with actual Discord API call)
            // For real integration, you need a Discord bot with proper permissions
            function fetchDiscordData() {
                // This is a simulation - replace with actual Discord API call
                return new Promise((resolve) => {
                    setTimeout(() => {
                        // Simulate API response
                        const simulatedResponse = {
                            user: {
                                id: discordUserId,
                                username: 'NadaDev',
                                avatar: 'https://cdn.discordapp.com/avatars/925382849450360852/4b2b87a0c5c7fb8a6e0b4f3a9b7c8d5e.webp?size=256',
                                status: 'online' // Change to 'idle', 'dnd', 'invisible' or 'offline'
                            }
                        };
                        resolve(simulatedResponse);
                    }, 1500);
                });
            }

            // Update Discord status display
            function updateDiscordStatus(status) {
                const statusConfig = discordStatuses[status] || discordStatuses.offline;
                
                // Update status dots
                const statusDots = document.querySelectorAll('.status-dot');
                statusDots.forEach(dot => {
                    dot.className = 'status-dot';
                    dot.classList.add(statusConfig.class);
                    dot.style.backgroundColor = statusConfig.color;
                    dot.style.boxShadow = `0 0 12px ${statusConfig.color}`;
                });
                
                // Update status text
                const statusTexts = document.querySelectorAll('.status-text');
                statusTexts.forEach(text => {
                    text.textContent = statusConfig.text;
                });
                
                // Update status badge on profile image
                const discordStatusBadge = document.getElementById('discordStatusBadge');
                discordStatusBadge.className = 'discord-status';
                discordStatusBadge.classList.add(statusConfig.class);
                discordStatusBadge.style.backgroundColor = statusConfig.color;
                
                // Update footer status display
                const discordStatusDisplay = document.getElementById('discordStatusDisplay');
                discordStatusDisplay.textContent = statusConfig.text;
                discordStatusDisplay.style.color = statusConfig.color;
            }

            // Update profile picture
            function updateProfilePicture(avatarUrl) {
                const profileImage = document.getElementById('profileImage');
                profileImage.src = avatarUrl;
                
                // Fallback image in case of error
                profileImage.onerror = function() {
                    this.src = 'https://images.unsplash.com/photo-1580489944761-15a19d654956?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=500&q=80';
                    this.alt = 'Nada - Default Profile Picture';
                };
            }

            // Initialize Discord integration
            async function initDiscordIntegration() {
                try {
                    // Show loading screen
                    loadingScreen.style.display = 'flex';
                    
                    // Fetch Discord data
                    const discordData = await fetchDiscordData();
                    
                    // Update UI with Discord data
                    updateProfilePicture(discordData.user.avatar);
                    updateDiscordStatus(discordData.user.status);
                    
                    // Hide loading screen
                    setTimeout(() => {
                        loadingScreen.style.opacity = '0';
                        loadingScreen.style.visibility = 'hidden';
                        
                        // Trigger entrance animations
                        const animatedElements = document.querySelectorAll('.skill-card, .section-title, .intro-text h1, .intro-text h2, .intro-text p');
                        animatedElements.forEach(el => {
                            el.style.opacity = '0';
                            el.style.transform = 'translateY(25px)';
                            el.style.transition = 'opacity 0.8s ease, transform 0.8s ease';
                        });
                        
                        // Animate elements on scroll
                        const observer = new IntersectionObserver((entries) => {
                            entries.forEach(entry => {
                                if (entry.isIntersecting) {
                                    entry.target.style.opacity = '1';
                                    entry.target.style.transform = 'translateY(0)';
                                }
                            });
                        }, { threshold: 0.1, rootMargin: '0px 0px -50px 0px' });
                        
                        animatedElements.forEach(el => observer.observe(el));
                        
                    }, 500);
                    
                } catch (error) {
                    console.error('Error fetching Discord data:', error);
                    
                    // Fallback to default data
                    updateProfilePicture('https://i.pravatar.cc/300?img=5');
                    updateDiscordStatus('online');
                    
                    // Hide loading screen
                    loadingScreen.style.opacity = '0';
                    loadingScreen.style.visibility = 'hidden';
                }
            }

            // Initialize
            initDiscordIntegration();

            // Real Discord API Integration Instructions:
            /*
            To connect to Discord's real API, you need:
            1. Create a Discord Application at https://discord.com/developers/applications
            2. Enable the "Server Members Intent" in the Bot section
            3. Use the Discord API endpoint: 
               `https://discord.com/api/v9/users/${discordUserId}`
            4. Include Authorization header with your bot token
            5. Handle the response to get user data and status
            
            Example fetch request:
            async function getRealDiscordData() {
                const response = await fetch(`https://discord.com/api/v9/users/${discordUserId}`, {
                    headers: {
                        'Authorization': `Bot YOUR_BOT_TOKEN_HERE`
                    }
                });
                return await response.json();
            }
            */

            // Interactive effects
            const skillCards = document.querySelectorAll('.skill-card');
            skillCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-18px) scale(1.04)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0) scale(1)';
                });
            });

            // Smooth scrolling for navigation links
            const navLinks = document.querySelectorAll('.nav-links a');
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href').substring(1);
                    const targetElement = document.getElementById(targetId);
                    
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                });
            });

            // Auto-refresh Discord status every 30 seconds
            setInterval(async () => {
                try {
                    const discordData = await fetchDiscordData();
                    updateDiscordStatus(discordData.user.status);
                } catch (error) {
                    console.log('Status refresh failed, using cached data');
                }
            }, 30000);
        });
    </script>
</body>
</html>
